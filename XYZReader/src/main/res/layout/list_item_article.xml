<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_margin_side"
    android:layout_marginRight="@dimen/item_margin_side"
    android:layout_marginTop="@dimen/item_margin_top"
    android:layout_marginBottom="@dimen/item_margin_bottom"
    android:clickable="true"
    android:focusable="true"
    android:elevation="@dimen/card_elevation"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/title_margin_side"
            android:paddingTop="@dimen/title_margin_side"
            android:paddingRight="@dimen/title_padding_right"
            android:paddingBottom="@dimen/title_padding_bottom"
            android:textColor="@color/text_color_dark"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/subtitle_padding"
            android:paddingRight="@dimen/subtitle_padding"
            android:paddingBottom="@dimen/subtitle_padding"
            android:textColor="@color/subtitle_text_color"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
